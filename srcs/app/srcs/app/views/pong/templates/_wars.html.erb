<script type="text/template" id="war-request-template">
  <div class="row" style="max-width: 1000px; min-width: 300px">
    <div class="col-2">
      <a class="link-light" style="cursor: pointer" id="guild2-profile"><%%= guild2_id %></a>
    </div>
