<script type="text/template" id="settings-template">
  <h1>Settings</h1><br></br>
  <div class="row">
  <aside class="col-md-4">
    <section class="user_avatar">
      <h1>
        <%= ('<img src="data:image/jpg;base64,%s">' % Base64.encode64(current_user.avatar)).html_safe %>
      </h1>
    </section>
  </aside>
  </div><br></br>
  <label for="displayname">Display name</label><br></br>
  <input type="text" name="displayname" id="displayname" value="<%%= displayname %>" >
  <br></br>
  <label for="email">Email</label><br></br>
  <input type="text" name="email" id="email" value="<%%= email %>" >
</script>
